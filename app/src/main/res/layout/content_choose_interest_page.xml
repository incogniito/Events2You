<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.samsonaiyegbusi.events2you.MainUI.ChooseInterestPage"
    tools:showIn="@layout/activity_choose_interest_page"
    android:background="@mipmap/app_default_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout13"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp">

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColorHint="#96ffffff"
            android:id="@+id/interestSearch"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:hint="Your Interest"
            android:background="#00ffffff"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_interest_ib"
            android:src="@mipmap/add_icon"
            android:background="#00ffffff" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What are you intersted in?"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/interestList_tv"
        android:layout_below="@+id/linearLayout13"
        android:layout_marginTop="72dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:textColorHint="#96ffffff"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:hint="Enter an interest and click the add button to store it here" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recommend_events_ib"
        android:layout_below="@+id/interestList_tv"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/recommend_events_icon"
        android:background="#00ffffff" />

</RelativeLayout>
