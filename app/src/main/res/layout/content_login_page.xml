<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainUI.LoginPage"
    tools:showIn="@layout/activity_login_page"
    android:background="@mipmap/background">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/log_username_et"
        android:textColor="#ffffff"
        android:hint="Please Enter Your Username"
        android:textColorHint="#96ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="203dp"
        android:textAlignment="center"
        android:background="#00ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/log_password_et"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:hint="Please Enter Your Password"
        android:textColorHint="#96ffffff"
        android:layout_below="@+id/log_username_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:background="#00ffffff" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout3">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/log_password_et"
        android:layout_marginTop="20dp">

        <ImageButton
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_ib"
            android:clickable="true"
            android:contentDescription="login_ib"
            android:src="@mipmap/login_new"
            android:background="#00ffffff"
            android:layout_below="@+id/log_password_et"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up here"
        android:id="@+id/signup_tv"
        android:textColor="#ffffff"
        android:phoneNumber="false"
        android:gravity="right"
        android:clickable="true"
        android:layout_alignTop="@+id/linearLayout3"
        android:layout_alignLeft="@+id/log_password_et"
        android:layout_alignStart="@+id/log_password_et" />

</RelativeLayout>
