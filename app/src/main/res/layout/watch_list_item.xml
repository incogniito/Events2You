<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/watchlist_iv"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <View
        android:id="@+id/textBackground_v"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:alpha="0.7"
        android:background="#111"
        android:layout_toRightOf="@+id/watchlist_iv"
        android:layout_alignBottom="@+id/watchlist_iv" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/watchlist_tv"
        android:layout_toRightOf="@+id/watchlist_iv"
        android:layout_alignTop="@+id/textBackground_v"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textBackground_v"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/watchlist_ID_tv"
        android:layout_alignBottom="@+id/watchlist_tv"
        android:layout_toRightOf="@+id/watchlist_iv"
        android:layout_toEndOf="@+id/watchlist_iv" />
</RelativeLayout>